<div class="container">
  <div class="row">
    <div class= "h5 bg-secondary mt-5">ジャンル新規登録</div>

    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>

   <table>
      <tr>
        <td>ジャンル名</td>
        <td><%= f.text_field :name, :size=>"30", class:"form-control mx-auto" %></td>
      </tr>
      <tr>
        <td><%= f.submit "新規登録", class:"btn btn-success"%></td>
      </tr>

    <% end %>
  </div>
</div>



