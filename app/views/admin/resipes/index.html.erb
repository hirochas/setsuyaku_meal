<div class="container">
  <div class="row">
    <div class= "col-lg-6 offset-2 h5 mt-5">
      レシピ一覧
    </div>
  </div>

  <div class="row">
    <table class="col-8 offset-2 mt-5">
      <% @resipes.each do |resipe| %>
      <tr>
        <td class="col-4"><%= image_tag resipe.get_image(200,200) %></td>
      </tr>
      <tr>
        <td class="col-4 d-flex align-items-start"><%= link_to admin_resipe_path(resipe.id) do %>
            <%= resipe.name %><% end %></td>
      </tr>
      <tr>
        <td class="col-4 d-flex align-items-start mt-3"><%= link_to admin_customer_path(resipe.customer.id) do %>
            <%= resipe.customer.name %><% end %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
